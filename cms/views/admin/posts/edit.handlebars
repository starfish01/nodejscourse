<h1>Edit Posts</h1>

<form action="/admin/posts/edit" method="post" >

    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" value="{{title}}"  >
    </div>

    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>


     <div class="form-check">
         <label  for="allowComments">Allow Comments</label>
        <input name="allowComments" type="checkbox" class="form-check-input" id="allowComments">
    </div>

    <div class="form-group">
        <label for="body">Body</label>
        <textarea name="body" type="text" cols="30" rows="10" class="form-control" id="body">{{body}}</textarea>
    </div>
     
    <button type="submit" class="btn btn-primary">Submit</button>

</form>