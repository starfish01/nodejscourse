<h1>All posts</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Title</th>
            <th>Status</th>
            <th>Allow Comments</th>
        </tr>
    </thead>
    <tbody>

        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td>{{# if file}} <img src="/uploads/{{file}}" class="img-rounded" height="200">{{/if}}</td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
            <td>
                <form action="/admin/posts/{{id}}?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>

            </td>
        </tr>
        {{/each}}
    </tbody>



</table>