 <div class="row post-page">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{post.title}}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#">{{post.user.firstName}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>{{GenerateTime post.date 'LLL'}}</p>

          <hr>

          <!-- Preview Image -->
          {{#if post.file}}
          <img class="img-fluid rounded" src="/uploads/{{post.file}}" alt="">
          {{/if}}


          <hr>

          <!-- Post Content -->
          <p>{{post.body}}</p>          
          <hr>

        <!--comments -->
          {{> home/comments}}


        </div>

          

        </div>

      </div>

